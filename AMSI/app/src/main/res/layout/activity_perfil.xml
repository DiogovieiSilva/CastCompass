<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/username"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/data_de_nascimento"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDataNascimento"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/g_nero"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etGenero"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/nomePerfil"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/telem_vel"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTelemovel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/morada"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etMorada"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:text="@string/nif"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNif"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="text"
                android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnGuardarPerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickEditarPerfil"
                android:padding="12dp"
                android:text="@string/editar_perfil" />

            <Button
                android:id="@+id/btnApagarPerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:backgroundTint="#FF0000"
                android:onClick="onClickApagarPerfil"
                android:padding="12dp"
                android:text="@string/apagar_perfil"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
